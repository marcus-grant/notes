    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Run flask file",
            "type": "python",
            "request": "launch",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            },
            "args":[
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}